<Window x:Class="Ludo._80_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ludo._80_View"
        xmlns:vm="clr-namespace:Ludo._60_ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700"
        Background="{Binding Color_Background}">
    <Window.DataContext>
        <vm:VM_MainWindow/>
    </Window.DataContext>
    <Window.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>

                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>

                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>

                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>

                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>

                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>

                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>

                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>

                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!--Test-->
            <Button x:Name="Test" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Content="Test"
                Command="{Binding Cmd_TestClick}" CommandParameter="4"
                />

            <!--Board_Startareas-->
            <Button x:Name="P1_Start_1" Grid.Row="14" Grid.Column="6" Margin="5px" Background="{Binding Color_P1}" IsEnabled="{Binding Field_Enable[60]}">
                <Button.Content>
                    <Ellipse MinWidth="20" MinHeight="20"  Stroke="Black"
                         Fill="{Binding Field_PawnColor[60]}" Visibility="{Binding Field_Pawn[0]}"/>
                </Button.Content>
            </Button>
            <Button x:Name="P1_Start_2" Grid.Row="14" Grid.Column="5" Margin="5px" Background="{Binding Color_P1}"/>
            <Button x:Name="P1_Start_3" Grid.Row="15" Grid.Column="6" Margin="5px" Background="{Binding Color_P1}"/>
            <Button x:Name="P1_Start_4" Grid.Row="15" Grid.Column="5" Margin="5px" Background="{Binding Color_P1}"/>

            <!--Board_Goal-->
            <Button x:Name="P1_Goal_1" Grid.Row="15" Grid.Column="9" Margin="5px" Background="{Binding Color_P1}"/>
            <Button x:Name="P1_Goal_2" Grid.Row="14" Grid.Column="9" Margin="5px" Background="{Binding Color_P1}"/>
            <Button x:Name="P1_Goal_3" Grid.Row="13" Grid.Column="9" Margin="5px" Background="{Binding Color_P1}"/>
            <Button x:Name="P1_Goal_4" Grid.Row="12" Grid.Column="9" Margin="5px" Background="{Binding Color_P1}"/>

            <!--Board_Die-->
            <Button x:Name="Die" Grid.Row="8" Grid.Column="8" Grid.RowSpan="3" Grid.ColumnSpan="3" 
                Margin="10px" FontSize="60"
                Content="{Binding Text_Die}" Command="{Binding Cmd_RollDie}" />


            <!--Board_Main-->
            <Button x:Name="F00" Grid.Row="16" Grid.Column="8" IsEnabled="{Binding Field_Enable[0]}">
                <Button.Content>
                    <Ellipse MinHeight="30" MinWidth="30" Stroke="Black"
                         Fill="{Binding Field_PawnColor[0]}" Visibility="{Binding Field_Pawn[0]}"/>
                </Button.Content>
            </Button>
            <Button x:Name="F01" Grid.Row="15" Grid.Column="8" IsEnabled="{Binding Field_Enable[1]}" Background="{Binding Field_GoToColor[1]}"/>
            <Button x:Name="F02" Grid.Row="14" Grid.Column="8" IsEnabled="{Binding Field_Enable[2]}" Background="{Binding Field_GoToColor[2]}"/>
            <Button x:Name="F03" Grid.Row="13" Grid.Column="8" IsEnabled="{Binding Field_Enable[3]}" Background="{Binding Field_GoToColor[3]}"/>
            <Button x:Name="F04" Grid.Row="12" Grid.Column="8" IsEnabled="{Binding Field_Enable[4]}" Background="{Binding Field_GoToColor[4]}"/>
            <Button x:Name="F05" Grid.Row="12" Grid.Column="7" IsEnabled="{Binding Field_Enable[5]}" Background="{Binding Field_GoToColor[5]}"/>
            <Button x:Name="F06" Grid.Row="12" Grid.Column="6" IsEnabled="{Binding Field_Enable[6]}" Background="{Binding Field_GoToColor[6]}"/>
            <Button x:Name="F07" Grid.Row="11" Grid.Column="6" IsEnabled="{Binding Field_Enable[7]}" Background="{Binding Field_GoToColor[7]}"/>

            <Button x:Name="P0_0" Margin="10px" Grid.Row="13" Grid.Column="13" 
                    Background="{Binding Color_P1}" />
        </Grid>
    </Window.Content>
</Window>
